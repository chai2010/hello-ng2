{
	"files": [
		"main.ts",
		"index.ts",
		"app/app.component.ts",
		"app/app.module.ts"
	],
	"compilerOptions": {
		"lib": ["dom", "es2016"],
		"types" : ["node"],
		"outDir": "./dist",
		"experimentalDecorators": true,
		"allowUnreachableCode": true,
		"noUnusedLocals": false,
		"declaration": false,
		"removeComments": true,
		"noImplicitAny": false,
		"allowJs": false,
		"sourceMap": false,
		"newLine": "CRLF",
		"target": "es5"
	}
}
